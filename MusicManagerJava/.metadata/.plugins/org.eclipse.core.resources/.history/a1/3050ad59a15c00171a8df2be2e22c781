package service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.context.annotation.Configuration;
import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;

import config.Song;
import config.Users;
import dao.MusicDAO;



public class MusicServiceImplement implements MusicService {
	@Autowired
	MusicDAO musicDao;

	public void setSongDao(MusicDAO songDao) {
		this.musicDao = songDao;
	}

	@Override
	public void add(Song song) {
		musicDao.add(song);

	}

	@Override
	public void update(Song song) {
		musicDao.update(song);

	}

	@Override
	public void delete(Song song) {
		musicDao.delete(song);

	}

	@Override
	public List<Song> search(String name) {
		return musicDao.search(name);
	}
	
	@Override
	public Song findById(int id) {
		return musicDao.findById(id);
	}

	@Override
	public List<Song> selectSongByUserId(int idUser) {
		return sessionDao.selectSongByUserId(idUser);
	}
	
	@Override
	public List<Song> logIn(String accountUser, String passwordUser) {
		return sessionDao.logIn(accountUser, passwordUser);
	}

	@Override
	public boolean isLogIn(String ip) {
		return sessionDao.isLogIn(ip);
	}

	@Override
	public int getUserId(String ip) {
		return sessionDao.getUserId(ip);
	}

	@Override
	public Users getUserByUserId(int UserId) {
		return sessionDao.getUserByUserId(UserId);
	}

	

}
