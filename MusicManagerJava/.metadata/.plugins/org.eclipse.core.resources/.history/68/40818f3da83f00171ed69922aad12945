import java.util.Calendar;
import java.util.Date;


public class StoreData {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		//creating configuration object  
	    Configuration config=new Configuration();  
	    config.configure("hibernate.cfg.xml");//populates the data of the configuration file  
	      
	    //creating seession factory object  
	    SessionFactory factory=config.buildSessionFactory();  
	      
	    //creating session object  
	    Session session=factory.openSession();  
	      
	    //creating transaction object  
	    Transaction t=session.beginTransaction();  
	          
	    SongMusic newSong=new SongMusic();  
	    //newSong.setId_song(7); 
	    newSong.setName("Thành Phố Buồn");
	    newSong.setAuthor("Tú Nhi");
	    Calendar calendar = Calendar.getInstance();
	    Date currentTime = calendar.getTime();
	    newSong.setDate(currentTime);
	    newSong.setStatus(false);
	    
	      
	    session.persist(newSong);//persisting the object  
	      
	    t.commit();//transaction is committed  
	    session.close();  
	      
	    System.out.println("successfully saved");  

	}

}
