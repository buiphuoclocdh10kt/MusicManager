<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="service" class="service.Service"></bean>
	
	<bean id="doBeforeMethod" class="advice.DoBeforeMethod"></bean>
	<bean id="doAfterReturningMethod" class="advice.DoAfterReturningMethod"></bean>
	<bean id="doAfterThrowingMethod" class="advice.DoAfterThrowingMethod"></bean>
	<bean id="doAroundMethod" class="advice.DoAroundMethod"></bean>
	
	
	<bean id="before" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="service" />
		<property name="interceptorNames">
			<list>
				<value>doBeforeMethod</value>
				<value>doAfterReturningMethod</value>
				<value>doAroundMethod</value>
			</list>
		</property>
	</bean>
	
	<bean id="afterReturning" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="service" />
		<property name="interceptorNames">
			<list>
				<value>doAfterReturningMethod</value>
			</list>
		</property>
	</bean>
	
	<bean id="afterThowing" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="service" />
		<property name="interceptorNames">
			<list>
				<value>doAfterThrowingMethod</value>
			</list>
		</property>
	</bean>
	
	<bean id="around" class="org.springframework.aop.framework.ProxyFactoryBean">
		<property name="target" ref="service" />
		<property name="interceptorNames">
			<list>
				<value>doAroundMethod</value>
			</list>
		</property>
	</bean>
</beans>